<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txt1"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorLink="@color/colorPrimary"
            ><requestFocus></requestFocus></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txt2"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="C"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:id="@+id/btc"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="X"
            android:textSize="20dp"
            android:id="@+id/btx"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="%"
            android:textSize="20dp"
            android:id="@+id/btp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="/"
            android:textSize="20dp"
            android:id="@+id/btd"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="7"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:id="@+id/bt7"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="20dp"
            android:id="@+id/bt8"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="20dp"
            android:id="@+id/bt9"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="*"
            android:textSize="20dp"
            android:id="@+id/btm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="4"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:id="@+id/bt4"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="20dp"
            android:id="@+id/bt5"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="20dp"
            android:id="@+id/bt6"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="20dp"
            android:id="@+id/bts"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="1"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:id="@+id/bt1"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="20dp"
            android:id="@+id/bt2"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="20dp"
            android:id="@+id/bt3"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="20dp"
            android:id="@+id/bta"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="AC"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:textSize="20dp"
            android:id="@+id/btac"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="20dp"
            android:id="@+id/bt0"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn1"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="20dp"
            android:id="@+id/btDot"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/btn2"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="20dp"
            android:id="@+id/bte"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>